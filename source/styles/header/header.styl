header
	font-family: sans-serif;

.wrapper
	position absolute;
	width: 100%;
	height: 100%
	left: 0;
	top: 0;
	background-color: #b295ad;
	display: flex;
	justify-content: center;
	align-items: center;

.card
	width: 300px;
	height: 300px;
	border: 1px solid;
	position: relative;
	perspective: 1000px;
	
	
.front, .back
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	display: flex;
	justify-content: center;
	align-items: center;
	transition: 2s;
	backface-visibility: hidden;

.front
	background-color: #acf9ea;
	
.back	
	background-color: #a3476f;	
	transform: rotateY(180deg);

.card:hover .front{
	transform: rotateY(180deg);
}
.card:hover .back{
	transform: rotateY(0deg);
}